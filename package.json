{
  "name": "@anysols/utils",
  "version": "0.6.0",
  "description": "Anysols Utils - common utility functions used across anysols projects",
  "main": "./index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "gulp | tsc",
    "test": "nyc mocha --recursive test/unit/**/*test.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "npm publish"
  },
  "files": [
    "lib",
    "index.js",
    "index.ts"
  ],
  "keywords": [
    "anysols",
    "anysols utils",
    "file utils",
    "string utils"
  ],
  "nyc": {
    "check-coverage": false,
    "all": true,
    "extension": [
      ".js"
    ],
    "include": [
      "lib/"
    ],
    "exclude": [
      "**/**.interface.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "docs/reports/coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anysols/anysols-utils.git"
  },
  "author": "Shivaji Varma <contact@shivajivarma.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/anysols/anysols-utils/issues"
  },
  "homepage": "https://anysols.com",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "jsonfile": "^5.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jsonfile": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/fs-extra": "^8.0.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "typescript": "^3.6.2"
  }
}
