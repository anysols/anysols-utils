{
  "lint": {
    "files": {
      "include": ["common-utils/src", "date-utils/src", "email-utils/src", "hash-utils/src", "logger-utils/src"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-explicit-any"]
    }
  },
  "tasks": {
    "test": "deno test --coverage=docs/reports/coverage --allow-all --unstable packages/common-utils/test packages/date-utils/test",
    "coverage": "deno coverage docs/reports/coverage/ --lcov > docs/reports/coverage/lcov.info",
    "version:patch": "semver inc patch",
    "version:minor": "semver inc minor"
  }
}
