{
  "name": "@justaos/utils",
  "version": "1.9.1",
  "exports": "./mod.ts",
  "lint": {
    "files": {
      "include": [
        "common-utils/src",
        "date-utils/src",
        "email-utils/src",
        "logger-utils/src"
      ]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-explicit-any"]
    }
  },
  "tasks": {
    "test": "deno test --coverage=docs/reports/coverage --allow-all packages/common-utils/test packages/date-utils/test packages/git-utils/test  packages/file-utils/test packages/logger-utils/test",
    "coverage": "deno coverage docs/reports/coverage/ --lcov > docs/reports/coverage/lcov.info",
    "coverage:report": "deno coverage docs/reports/coverage",
    "version:patch": "version patch",
    "version:minor": "version minor"
  },
  "imports": {
    "@std/fmt": "jsr:@std/fmt@^0.218.2",
    "@std/fs": "jsr:@std/fs@^0.218.2",
    "@std/log": "jsr:@std/log@^0.218.2",
    "@std/path": "jsr:@std/path@^0.218.2",
    "@std/uuid": "jsr:@std/uuid@^0.218.2"
  }
}
