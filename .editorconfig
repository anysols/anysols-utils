###############################
# Core EditorConfig Options   #
###############################

root = true

# All files
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 4-spaced files
[{src, test, examples}/**.{js, ts, json, xml, md}]
indent_size = 4
end_of_line = crlf


# 2-spaced files
[**.{css, less, sass, scss, html, htm, xhtml, yml}]
indent_size = 2
